<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">


	<title> Estilo</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="css/app.css">
</head>

<body>
	<%- include('./partials/header') %>

		<!-- Banner -->
		<div class="banner">
			<img src="images/ESTILo.png" alt="Banner de ofertas">
		</div>

		<!-- /Banner -->


		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Novedades</h2>
				</div>
				<!-- Show the "ultimos" products -->

				<%for (var i=0; i < productos.length ;i++ ){%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/id/<%= productos[i].id %>">
								<figure class="product-box_image">
									<img src="<%= productos[i].imagen %>" alt="<%= productos[i].producto %>">
								</figure>
								<article class="product-box_data">
									<h2>
										<%=productos[i].producto %>
									</h2>
									<p>
										<%= productos[i].descripcion %>
									</p>
									<p>Comentarios: <%= productos[i].comentarios.length %></p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
			</div>
			<!-- /Novedades -->
			<!-- Más comentados -->
			<div class="container products-wrapper">
				<div class="row">
