<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>

	<%- include('./partials/headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">

				<img src="<%= usuario[0].fotoDePerfil %>" alt="<%= usuario[0].fotoDePerfil %>" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario[0].usuario %>
						<a href="/users/profileEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<p> <%= usuario[0].email %> </p>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<%for (var i=0; i < productos.length ;i++ ){%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= productos[i].imagen %>" alt="<%= productos[i].producto %>">
							</figure>
							<article class="product-box_data">
								<h2>
									<%=productos[i].producto %>
								</h2>
								<p>
									<%= productos[i].descripcion %>
								</p>
								<p>Comentarios: <%= productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
		</div>
	<!-- /Mis productos -->
	<%- include('./partials/footer') %>

</body>	
</html>