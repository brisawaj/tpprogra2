<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>


<body>
	<%- include('./partials/header') %>


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
				<%for (var i=0; i < productos.length ;i++ ){%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= productos[i].imagen %>" alt="<%= productos[i].producto %>">
							</figure>
							<article class="product-box_data">
								<h2>
									<%=productos[i].producto %>
								</h2>
								<p>
									<%= productos[i].descripcion %>
								</p>
								<p>Comentarios: <%= productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
		</div>
		<!-- /Novedades -->

	<%- include('./partials/footer') %>

</body>

</html>