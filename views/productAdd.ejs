<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>



<body>
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/logo-estilo.png">
					</a>
				</div>
	
				<div class="col-7 col-md-6">
					<form action="/products/search" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más"
							class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Todas las opiniones en un solo lugar.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
	
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
				</ul>
	
				<ul class="right-navbar">
					<li><a href="/users/profile">
							<%= usuario.email %> <i class="fas fa-user"></i>
						</a>
					</li>
					<li>
						<form action="/users/logout" method="GET">
							<button class="logout" type="submit">
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							</button>
						</form>
					</li>
				</ul>
			</nav>
		</div>
	</header>	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">
				<form action="/products/productAdd" method="POST">
					<label for="image">Imagen:</label>
					<input type="text" id="image" name="image" placeholder="Escribe la URL" ><br><br>
				
					<label for="name">Nombre:</label>
					<input type="text" id="name" name="name" placeholder="Nombre del producto"><br><br>
					
					<label for="description">Descripción:</label>
					<textarea id="description" name="description" placeholder="Descripcion del producto"></textarea><br><br>
				
					<input type="submit" value="CREAR" class="button">
				</form>
			<%- include('./partials/footer') %>

</body>

</html>