<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
                    <img src="/images/logo-estilo.png">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <form action="/products/search" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más"
                        class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">
                    <i class="fas fa-hand-holding-usd"></i>
                    Todas las opiniones en un solo lugar.
                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">
            <ul class="left-navbar">
                <li><a href="/">Todos los productos</a></li>
                <!-- solo logueado <li><a href="">Cargar productos</a></li> -->
            </ul>

            <ul class="right-navbar">
                <li>
                    <a href="/users/login">Ingresá <i class="fas fa-sign-in-alt"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</header>
<!-- /Header -->


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<h2 class="col-12"> <h1>Formulario de registro</h1>
				<form action="" method="POST">
				  <label for="email">Email:</label>
				  <input  type="email"  name="email" placeholder="solorsi@correo.com" required><br>
				  <% if (errorMessage) { %>
					<div style="color: red;">
						<%= errorMessage %>
					</div>
				<% } %>
			      <br>
				  <label for="username">Usuario:</label>
				  <input type="text" name="username" placeholder="sol2002" required><br>
				  <br>
				  <label for="password">Contraseña:</label>
				  <input type="password" name="password" minlength="4" required><br>
				  <br>
				  <label for="birthdate">Fecha de nacimiento:</label>
				  <input type="date"  name="birthdate"><br>
				  <br>
				  <label for="id">DNI:</label>
				  <input type="text"  name="dni" placeholder="12.345.678"><br>
				  <br>
				  <label for="username">Foto de perfil:</label>
				  <input type="text"  name="perfil"><br>
				  <br>
				  <input type="submit" value="REGISTRARSE" class="button">
				</form>


			<%- include('./partials/footer') %>

</body>

</html>